{
  "name": "momo-electron",
  "version": "0.0.1",
  "description": "a electron app for momo",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "format": "prettier-tslint fix '**/*.ts'",
    "prettier": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nokisnojok/momo-electron.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nokisnojok/momo-electron/issues"
  },
  "homepage": "https://github.com/nokisnojok/momo-electron#readme",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "momo-app",
        "icon": "./public/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "nokisnojok",
              "name": "momo-electron"
            },
            "prerelease": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./scripts/webpack.main.config.js",
            "renderer": {
              "config": "./scripts/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.64",
    "@electron-forge/publisher-github": "^6.0.0-beta.64",
    "electron": "^19.0.8",
    "electron-forge-maker-nsis-web": "^23.3.1",
    "hooks": "^0.3.2",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-tslint": "^0.4.2",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@de-pa/react": "0.0.6",
    "@de-pa/react-dom": "0.0.6",
    "electron": "^19.0.8",
    "injection-js": "^2.4.0",
    "reflect-metadata": "^0.1.13"
  }
}
